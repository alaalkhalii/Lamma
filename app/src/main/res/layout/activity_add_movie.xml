<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.addMovie">

    <TextView
        android:id="@+id/movieInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Movie Information"
        android:textColor="@color/gray7"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/movieInfoCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="8dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/gray2"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/movieInfo"
                card_view:cardElevation="10dp"
                card_view:cardPreventCornerOverlap="false"
                tools:layout_editor_absoluteX="10dp">

                <Button
                    android:id="@+id/UploadPosterBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="335dp"
                    android:background="@drawable/background_white_button"
                    android:paddingStart="30dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="30dp"
                    android:paddingBottom="10dp"
                    android:text="Upload Poster"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/MovieNameEditTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/background_edit_text"
                    android:ems="10"
                    android:hint="Movie Name"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/YearEditTxt"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/background_edit_text"
                    android:ems="10"
                    android:hint="Year"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/LengthEditTxt"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/background_edit_text"
                    android:ems="10"
                    android:hint="Length"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/movie_cover_height"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="400dp"
                    android:layout_marginBottom="15dp"
                    android:alpha="0.4"
                    android:background="@drawable/upload" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/ActionCB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Action"
                            android:textColor="@color/gray8"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/HorrorCB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Horror"
                            android:textColor="@color/gray8"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/AdventureCB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Adventure "
                            android:textColor="@color/gray8"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/ComedyCB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Comedy"
                            android:textColor="@color/gray8"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/ThrillerCB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Thriller"
                            android:textColor="@color/gray8"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/DramaCB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Drama"
                            android:textColor="@color/gray8"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/ScienceFictionCB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Science"
                            android:textColor="@color/gray8"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/RomanticCB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Romantic"
                            android:textColor="@color/gray8"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="243dp"
                    android:layout_marginTop="125dp"
                    android:numStars="5"
                    android:stepSize="1"
                    android:theme="@style/RatingBar" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="155dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/gray4" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="320dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/gray4" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginEnd="20dp"
                    android:padding="8dp"
                    android:text="Movie Rate "
                    android:textColor="@color/gray8"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/AddMovieBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="90dp"
        android:paddingTop="10dp"
        android:paddingEnd="90dp"
        android:paddingBottom="10dp"
        android:layout_margin="20dp"
        android:text="Add"
        android:textColor="@color/White"
        android:textSize="22sp"
        android:background="@drawable/gradient_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>