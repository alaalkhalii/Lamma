<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Activity.MovieOrSeriesActivity">

    <ImageView
        android:id="@+id/SeriesImageV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_seriesiconw"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New TV Show"
        android:textColor="@color/White"
        android:textSize="26sp"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/MovieImageV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="260dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_movieiconw_24dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Movie"
        android:textColor="@color/White"
        android:textSize="26sp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        />

</LinearLayout>